<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txvTitleStudentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentName"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentName"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Nombre del estudiante" />

    <TextView
        android:id="@+id/txvStudentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="Maria Estefania Gomez Segura" />

    <TextView
        android:id="@+id/txvTitleStudentCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentCode"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentCode"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="CÃ³digo" />

    <TextView
        android:id="@+id/txvStudentCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentCode"
        app:layout_constraintTop_toBottomOf="@id/txvStudentName"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="45345345" />

    <TextView
        android:id="@+id/txvTitleStudentHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentHelp"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentHelp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Ayuda" />

    <TextView
        android:id="@+id/txvStudentHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentHelp"
        app:layout_constraintTop_toBottomOf="@id/txvStudentCode"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="Silla de ruedas" />

    <TextView
        android:id="@+id/txvTitleStudentClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentClass"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentClass"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Asignatura" />

    <TextView
        android:id="@+id/txvStudentClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentClass"
        app:layout_constraintTop_toBottomOf="@id/txvStudentHelp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="Algebra lineal" />

    <TextView
        android:id="@+id/txvTitleStudentGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentGroup"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentGroup"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Grupo" />

    <TextView
        android:id="@+id/txvStudentGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentGroup"
        app:layout_constraintTop_toBottomOf="@id/txvStudentClass"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="A2" />

    <TextView
        android:id="@+id/txvTitleStudentDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txvStudentDate"
        app:layout_constraintBottom_toBottomOf="@id/txvStudentDate"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Fecha de prestamo" />

    <TextView
        android:id="@+id/txvStudentDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txvTitleStudentDate"
        app:layout_constraintTop_toBottomOf="@id/txvStudentGroup"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="09/09/1966" />

</androidx.constraintlayout.widget.ConstraintLayout>